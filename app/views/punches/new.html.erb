<header>
	<h1><%= "#{@employee.first_name} #{@employee.last_name}" %></h1>
</header>

<%= form_for([@employee, @punch]) do |f| %>
	<fieldset>
		<ol>
				<%= f.collection_radio_buttons(:job_id, @employee.jobs, :id, :job_description, autofocus: true, prompt: true) do |b| %>
					<p>
						<%= b.radio_button %> <%= b.label %> 
					</p>
				<% end %>
		</ol>
		<p>
			<%= f.submit 'Clock In' %>
			
		</p>
	</fieldset>
<% end %>